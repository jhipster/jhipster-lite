# Prettier configuration

printWidth: 140
singleQuote: true
tabWidth: 2
useTabs: false

# js and ts rules:
arrowParens: avoid

# jsx and tsx rules:
bracketSameLine: false

# search additional plugin, following prettier 2.6.0
pluginSearchDirs:
  - .

# java rules:
overrides:
  - files: '*.java'
    options:
      tabWidth: 2

# xml rules:
xmlWhitespaceSensitivity: ignore
