{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":disableDependencyDashboard",
    ":automergeMinor",
    ":automergePr",
    ":automergeRequireAllStatusChecks",
    ":label(area: dependencies)"
  ],
  "prHourlyLimit": 20,
  "docker-compose": {
    "fileMatch": [
      "^src/main/docker/[^/]*\\.ya?ml$"
    ]
  }
}
